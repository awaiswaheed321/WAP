{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2022" /* Set the JavaScript language version for emitted JavaScript. */,
    "module": "ES2022" /* Specify the module code generated (ESNext for modern JS). */,
    "outDir": "./dist" /* Output folder for compiled files. */,
    "strict": true /* Enable strict type-checking options. */,
    // "esModuleInterop": true /* Enable compatibility for CommonJS modules. */,
    // "moduleResolution": "node" /* Use Node.js style module resolution. */,
    // "forceConsistentCasingInFileNames": true /* Ensure that file imports have consistent casing. */,

    /* Experimental Options */
    // "resolveJsonModule": true /* Allow importing JSON files as modules. */,
    // "skipLibCheck": true /* Skip type checking for library declaration files (.d.ts). */,

    /* Source Maps and Debugging */
    // "sourceMap": true /* Generate source maps for debugging. */,
    // "noEmit": false /* Only emit files when compiling. */,

    /* TypeScript Output */
    // "declaration": true /* Emit TypeScript declaration files for the compiled JavaScript. */,

    /* ECMAScript Options */
    // "allowSyntheticDefaultImports": true /* Allow default imports from modules with no default export. */

    /* JSX Support (if using React) */
    // "jsx": "react",                       /* Set JSX compilation target (for React). */

    /* Paths Mapping (for aliasing paths) */
    // "baseUrl": "./",                      /* Base directory for paths. */
    // "paths": {                            /* Aliases for module paths. */
    //   "@app/*": ["src/app/*"]
    // }

    /* Experimental Decorators (if using Angular or similar) */
    // "experimentalDecorators": true,       /* Enable experimental support for decorators. */
    // "emitDecoratorMetadata": true         /* Emit metadata for decorated classes and members. */
  },
  "include": ["src/**/*", "practice/ts/src/practice.ts" /* Include all TypeScript files in the src folder. */],
  "exclude": [
    "node_modules" /* Exclude node_modules from compilation. */,
    // "dist" /* Exclude output directory from compilation. */
  ],
